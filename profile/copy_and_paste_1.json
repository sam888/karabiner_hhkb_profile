{
  "title": "Right_option + semicolon to copy & right_option + quote to paste",
  "rules": [
    {
      "description": "Right_option + Semicolon to Copy",
      "manipulators": [
        {
          "from": {
              "key_code": "semicolon",
              "modifiers": {
                "mandatory": [
                  "right_option"
                ]
              }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": [
                "left_command"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Right_option + Quote to Paste",
      "manipulators": [
        {
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": [
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "v",
              "modifiers": [
                "left_command"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
